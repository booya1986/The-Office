{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "@pixel-office/renderer": ["../renderer/src"],
      "@pixel-office/shared": ["../shared/src"],
      "@pixel-office/core": ["../core/src"],
      "@pixel-office/agents": ["../agents/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

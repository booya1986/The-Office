{
  "name": "@pixel-office/desktop",
  "version": "0.1.0",
  "description": "Electron desktop app for Pixel Office Simulator",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "@pixel-office/shared": "workspace:*",
    "@pixel-office/core": "workspace:*",
    "@pixel-office/agents": "workspace:*",
    "@pixel-office/renderer": "workspace:*",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.pixeloffice.simulator",
    "productName": "Pixel Office Simulator",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  }
}
